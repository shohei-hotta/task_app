<h1><%= t("view.label.headline_index") %></h1>

<%= link_to t("view.task.link_new"), new_admin_label_path, class: "btn btn-primary" %>

<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th><%= Label.human_attribute_name(:id) %></th>
      <th><%= Label.human_attribute_name(:name) %></th>
      <th><%= Label.human_attribute_name(:created_at) %></th>
    </tr>
  </thead>
  <tbody>
    <% @labels.each do |label| %>
      <tr>
        <td><%= label.id %></td>
        <td><%= label.name %></td>
        <td><%= label.created_at.strftime("%Y年%m月%d日") %></td>
      </tr>
    <% end %>
  </tbody>
</table>