<h1><%= t("view.task.headline_index") %></h1>

<%= link_to t("view.task.link_new"), new_task_path %>

<%= form_with url: tasks_path, method: :get, local: true do |f| %>
  <div class="form-group">
    <%= f.text_field :search %>
  </div>
  <%= f.submit t("view.task.button_search") %>
<% end %>

<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
<table>
  <thead>
    <tr>
      <th><%= Task.human_attribute_name(:name) %></th>
      <th><%= Task.human_attribute_name(:description) %></th>
      <th><%= Task.human_attribute_name(:deadline) %></th>
      <th><%= Task.human_attribute_name(:status) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><%= task.deadline.strftime("%Y年%m月%d日") %></td>
        <td><%= task.status %></td>
        <td><%= link_to t("view.task.link_show"), task_path(task.id) %></td>
        <td><%= link_to t("view.task.link_edit"), edit_task_path(task.id) %></td>
        <td><%= link_to t("view.task.link_destroy"), task_path(task.id), method: :delete, data: { confirm: "「#{task.name}」#{t("view.task.destroy_confirm")}" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>